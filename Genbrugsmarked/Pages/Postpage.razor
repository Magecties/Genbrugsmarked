    private async Task DeletePostItem(Post item)
    {
        await Http.DeleteAsync($"{serverUrl}/api/posts/delete/{item.Id}");

        postlisten = await Http.GetFromJsonAsync<Post[]>($"{serverUrl}/api/posts/getall");

    }


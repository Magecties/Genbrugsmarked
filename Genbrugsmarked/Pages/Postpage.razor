@page "/postpage"
@inject HttpClient Http;
@using Core;
@inject NavigationManager NavManager


<h1 class="mb-3 mt-3">Post List</h1>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Category</th>
            <th>Price</th>
            <th>Status</th>
            <th>Room name</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in postlisten?? new Post[0])
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Category</td>
                <td>@item.Price</td>
                <td>@item.status</td>
                <td>
                    @if (item.Room != null)
                    {
                        @item.Room.Name
                    }
                    else
                    {
                        <span>N/A</span>
                    }
                </td>
            </tr>
        }
        
    </tbody>
</table>



